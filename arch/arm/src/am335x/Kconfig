config AM335X_GPIO_IRQ
	bool "GPIO interrupts"
	default n
	---help---
		Select to enable support for GPIO interrupts.  These will
		be handled through a second level of interrupt decoding and will
		otherwise appear as any other interrupt.

choice
	prompt "Boot device"
	default AM335X_BOOT_SDCARD

config AM335X_BOOT_NAND
	bool "NAND FLASH"

config AM335X_BOOT_SPINOR
	bool "SPI NOR FLASH"

config AM335X_BOOT_SDCARD
	bool "SD card"

config AM335X_BOOT_USB
	bool "USB"

endchoice # Boot device

config AM335X_DDR_MAPOFFSET
	int "Installed SDRAM offset"
	default 0
	---help---
		The size of the installed SRAM memory is required in order to
		properly configure memory mapping.  The mapping will begin at the
		start of SDRAM plus AM335X_DDR_MAPOFFSET and extend for DDR_MAPSIZE
		bytes.  NOTE typically AM335X_MAP_OFFSET is zero and AM335X_DDR_MAPSIZE is
		the full, installed size of the DRAM.  But these values can be
		modified to set aside memory at the beginning or end of SRAM that is
		unmapped (or mapped differently).  NOTE also that this value relates
		closely to other settings:

			RAM_START and RAM_VSTART give this physical and virtual addresses
			of the start of usable memory (begining with .text).  NOTE that
			this may not necessarily be the actual start of the mapped SDRAM
			region.  It will be larger if NuttX begins at an offset from
			beginning of mapped SDRAM (which is the normal case).

			RAM_SIZE gives the size of the .text, .data, and .bss sections
			plus the size of the available heap.  NOTE that RAM_SIZE may not
			include all of SDRAM up to the end of mapped region.

config AM335X_DDR_MAPSIZE
	int "Installed SDRAM size"
	default 536870912
	---help---
		The size of the installed SRAM memory is required in order to
		properly configure memory mapping.  The mapping will begin at the
		start of SDRAM plus AM335X_DDR_MAPOFFSET and extend for DDR_MAPSIZE
		bytes.  NOTE typically AM335X_MAP_OFFSET is zero and AM335X_DDR_MAPSIZE is
		the full, installed size of the DRAM.  But these values can be
		modified to set aside memory at the beginning or end of SRAM that is
		unmapped (or mapped differently).  NOTE also that this value relates
		closely to other settings:

			RAM_START and RAM_VSTART give this physical and virtual addresses
			of the start of usable memory (begining with .text).  NOTE that
			this may not necessarily be the actual start of the mapped SDRAM
			region.  It will be larger if NuttX begins at an offset from
			beginning of mapped SDRAM (which is the normal case).

			RAM_SIZE gives the size of the .text, .data, and .bss sections
			plus the size of the available heap.  NOTE that RAM_SIZE may not
			include all of SDRAM up to the end of mapped region.

menu "LCD Configuration"
	depends on AM335X_LCD

config AM335X_LCD_VRAMBASE
	hex "Video RAM base address"
	default 0xa0010000
	---help---
		Base address of the video RAM frame buffer.  The default is
		(AM335X_EXTDRAM_CS0 + 0x00010000)

config AM335X_LCD_USE_CLKIN
	bool "Use optional input clock"
	default n

config AM335X_LCD_CLKIN_FREQUENCY
	int "Input clock frequency"
	default 0
	depends on AM335X_LCD_USE_CLKIN

config AM335X_LCD_REFRESH_FREQ
	int "LCD refesh rate (Hz)"
	default 50
	---help---
		LCD refesh rate (Hz)

config AM335X_LCD_BACKLIGHT
	bool "Enable backlight"
	default y
	---help---
		Enable backlight support.  If AM335X_LCD_BACKLIGHT is selected, then
		the board-specific logic must provide this lpc54_backlight()
		interface so that the LCD driver can turn the backlight on and off
		as necessary.  You should select this option and implement
		lpc54_backlight() if your board provides GPIO control over the
		backlight.  This interface provides only ON/OFF control of the
		backlight.  If you want finer control over the backlight level (for
		example, using PWM), then this interface would need to be extended.

config AM335X_LCD_TFTPANEL
	bool "TFT Panel"
	default y
	---help---
		TFT Panel vs. STN display.  STN display panels require algorithmic
		pixel pattern generation to provide pseudo gray scaling on
		monochrome displays, or color creation on color displays.  TFT
		display panels require the digital color value of each pixel to be
		applied to the display data inputs.

config AM335X_LCD_MONOCHROME
	bool "Monochrome LCD"
	default n
	depends on !AM335X_LCD_TFTPANEL
	---help---
		STN LCD monochrome/color selection.  Selects monochrome LCD.  This
		selection has no meaning for a TFT panel.

choice
	prompt "Bits per pixel"
	default AM335X_LCD_BPP24 if AM335X_LCD_TFTPANEL
	default AM335X_LCD_BPP16_565 if !AM335X_LCD_TFTPANEL

config AM335X_LCD_BPP1
	bool "1 BPP"
	depends on AM335X_LCD_MONOCHROME

config AM335X_LCD_BPP2
	bool "2 BPP"
	depends on AM335X_LCD_MONOCHROME

config AM335X_LCD_BPP4
	bool "4 BPP"
	depends on AM335X_LCD_MONOCHROME

config AM335X_LCD_BPP8
	bool "8 BPP"
	depends on AM335X_LCD_MONOCHROME

config AM335X_LCD_BPP12_444
	bool "12 bpp, 4:4:4 mode"
	depends on !AM335X_LCD_MONOCHROME

config AM335X_LCD_BPP16
	bool "16 BPP"
	depends on AM335X_LCD_MONOCHROME

config AM335X_LCD_BPP16_565
	bool "16 BPP, 5:6:5 mode"
	depends on !AM335X_LCD_MONOCHROME

config AM335X_LCD_BPP24
	bool "24 BPP, 8:8:8 mode"
	depends on AM335X_LCD_TFTPANEL

endchoice

config AM335X_LCD_BGR
	bool "Blue-Green-Red color order"
	default n
	depends on !AM335X_LCD_MONOCHROME
	---help---
		This option selects BGR color order vs. default RGB

config AM335X_LCD_BACKCOLOR
	hex "Initial background color"
	default 0x0
	---help---
		Initial background color

config AM335X_LCD_HWIDTH
	int "Display width (pixels)"
	default 480
	---help---
		Horizontal width the display in pixels

config AM335X_LCD_HPULSE
	int "Horizontal pulse"
	default 2

config AM335X_LCD_HFRONTPORCH
	int "Horizontal front porch"
	default 5

config AM335X_LCD_HBACKPORCH
	int "Horizontal back porch"
	default 40

config AM335X_LCD_VHEIGHT
	int "Display height (rows)"
	default 272
	---help---
		Vertical height of the display in rows

config AM335X_LCD_VPULSE
	int "Vertical pulse"
	default 2

config AM335X_LCD_VFRONTPORCH
	int "Vertical front porch"
	default 8

config AM335X_LCD_VBACKPORCH
	int "Vertical back porch"
	default 8

endmenu # LCD Configuration
endif # ARCH_CHIP_AM335X
