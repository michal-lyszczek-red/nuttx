# Peripheral Driver Selections

config MAX326XX_WDOG
	bool "Watchdog Timer"
	default n
	depends on MAX326XX_HAVE_WDOG

config MAX326XX_WWDOG0
	bool "Windowed Watchdog Timer 0"
	default n
	depends on MAX326XX_HAVE_WWDOG

config MAX326XX_WWDOG1
	bool "Windowed Watchdog Timer 1"
	default n
	depends on MAX326XX_HAVE_WWDOG

config MAX326XX_RWDOG
	bool "Recovery Watchdog"
	default n
	depends on MAX326XX_HAVE_RWDOG

config MAX326XX_WAKEUP
	bool "Wakeup Timer"
	default n
	depends on MAX326XX_HAVE_WAKEUP

config MAX326XX_RTC
	bool "RTC"
	default n
	depends on MAX326XX_HAVE_RTC

config MAX326XX_CRC
	bool "CRC 16/32"
	default n
	depends on MAX326XX_HAVE_CRC

config MAX326XX_AES
	bool "AES 128, 192, 256"
	default n
	depends on MAX326XX_HAVE_AES

config MAX326XX_USB20
	bool "USB 2.0 Device"
	default n
	depends on MAX326XX_HAVE_USB20

config MAX326XX_TIMER32_0
	bool "32-Bit Timer 0"
	default n

config MAX326XX_TIMER32_1
	bool "32-Bit Timer 1"
	default n

config MAX326XX_TIMER32_2
	bool "32-Bit Timer 2"
	default n
	depends on MAX326XX_HAVE_TIMER32_2

config MAX326XX_TIMER32_3
	bool "32-Bit Timer 3"
	default n
	depends on MAX326XX_HAVE_TIMER32_3

config MAX326XX_TIMER32_4
	bool "32-Bit Timer 4"
	default n
	depends on MAX326XX_HAVE_TIMER32_4

config MAX326XX_TIMER32_5
	bool "32-Bit Timer 5"
	default n
	depends on MAX326XX_HAVE_TIMER32_5

config MAX326XX_TIMER8
	bool "8-Bit Timer"
	default n
	depends on MAX326XX_HAVE_TIMER8

config MAX326XX_PTENGINE
	bool "Pulse Train Engine"
	default n

config MAX326XX_SPIM0
	bool "SPI Master 0"
	default n

config MAX326XX_SPIM1
	bool "SPI Master 1"
	default n

config MAX326XX_SPIM2
	bool "SPI Master 2"
	default n
	depends on MAX326XX_HAVE_SPIM2

config MAX326XX_SPIS0
	bool "SPI Slave 0"
	default n

config MAX326XX_SPIS1
	bool "SPI Slave 1"
	default n
	depends on MAX326XX_HAVE_SPIS1

config MAX326XX_SPIXIP
	bool "SPI XIP"
	default n
	depends on MAX326XX_HAVE_SPIXIP

config MAX326XX_I2SS
	bool "I2S Slave"
	default n
	depends on MAX326XX_HAVE_I2SS

